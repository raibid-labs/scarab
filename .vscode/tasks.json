{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo check",
      "type": "shell",
      "command": "cargo check --workspace",
      "group": "build",
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo test",
      "type": "shell",
      "command": "cargo test --workspace",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo clippy",
      "type": "shell",
      "command": "cargo clippy --workspace -- -D warnings",
      "group": "build",
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "plugin: build all",
      "type": "shell",
      "command": "just plugin-build-all",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "plugin: validate all",
      "type": "shell",
      "command": "just plugin-validate-all",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "plugin: watch",
      "type": "shell",
      "command": "just plugin-watch",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "run daemon",
      "type": "shell",
      "command": "cargo run -p scarab-daemon",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "run client",
      "type": "shell",
      "command": "cargo run -p scarab-client",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Watch Plugin (Hot Reload)",
      "type": "shell",
      "command": "just",
      "args": ["dev-mode", "${input:pluginName}"],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Compile Plugin to .fzb",
      "type": "shell",
      "command": "just",
      "args": ["plugin-build", "${input:pluginName}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Test Plugin",
      "type": "shell",
      "command": "just",
      "args": ["plugin-test", "${input:pluginName}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Package Plugin",
      "type": "shell",
      "command": "just",
      "args": ["plugin-package", "${input:pluginName}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Create New Plugin",
      "type": "shell",
      "command": "just",
      "args": ["plugin-new", "${input:pluginName}", "${input:pluginType}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "pluginName",
      "type": "promptString",
      "description": "Plugin name (e.g., my-plugin)"
    },
    {
      "id": "pluginType",
      "type": "pickString",
      "description": "Plugin type",
      "options": ["frontend", "backend"],
      "default": "frontend"
    }
  ]
}
