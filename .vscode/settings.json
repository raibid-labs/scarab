{
  // Rust Analyzer settings
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.check.extraArgs": ["--", "-D", "warnings"],
  "rust-analyzer.rustfmt.extraArgs": ["+nightly"],

  // F# settings for Fusabi plugins
  "FSharp.enableTreeView": true,
  "FSharp.inlayHints.enabled": true,
  "FSharp.inlayHints.typeAnnotations": true,

  // Editor settings
  "editor.formatOnSave": true,
  "editor.rulers": [100],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,

  // File associations
  "files.associations": {
    "*.fsx": "fsharp",
    "*.fzb": "binary",
    "justfile": "makefile"
  },

  // File exclusions
  "files.exclude": {
    "**/.git": true,
    "**/target": true,
    "**/*.fzb": false
  },

  // Search exclusions
  "search.exclude": {
    "**/target": true,
    "**/Cargo.lock": true
  },

  // Terminal settings
  "terminal.integrated.env.linux": {
    "RUST_BACKTRACE": "1"
  },

  // Markdown settings
  "markdown.extension.toc.levels": "2..6",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.rulers": [120]
  },

  // TOML settings
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.tabSize": 2
  },

  // Rust settings
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },

  // F# settings
  "[fsharp]": {
    "editor.defaultFormatter": "ionide.ionide-fsharp",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },

  // JSON settings
  "[json]": {
    "editor.tabSize": 2
  },

  // YAML settings
  "[yaml]": {
    "editor.tabSize": 2
  },

  // Spell checker
  "cSpell.words": [
    "Fusabi",
    "Scarab",
    "alacritty",
    "beengud",
    "bytemuck",
    "clippy",
    "rustc",
    "rustfmt",
    "tokio",
    "wayland",
    "xcb",
    "xkbcommon"
  ]
}
